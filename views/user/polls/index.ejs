<%- include('../../includes/guest/header.ejs') %>

    <body>

        <%- include('../../includes/guest/navigation.ejs') %>
        
            <%- include('../../includes/user/menu.ejs') %>

                <div class="space-y-6">
                    <h3 class="text-xl font-semibold text-primary">My Polls</h3>

                    <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">

                        <% for (let i=1; i <=10; i++) { %>

                            <div class="rounded-xl border border-gray-200">
                                <a href="/<%= i %>" class="block w-full h-48 rounded-xl overflow-hidden">
                                    <img src="/images/poll-image.jpg" alt="Poll Image" class="w-full h-full object-cover object-center">
                                </a>

                                <div class="p-3 space-y-2">
                                    <p class="text-lg font-semibold">How do you prefer to spend your weekends?</p>
                                    <p class="text-sm font-light">Created 11 November, 2023</p>

                                    <div class="flex space-x-2 justify-end">
                                        <a href="/user/polls/<%= i %>/edit">
                                            <img src="/images/pencil-square.svg" alt="Edit" class="w-6 text-secondary">
                                        </a>
                                        <button>
                                            <img src="/images/trash.svg" alt="Delete" class="w-6">
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                    </div>
                </div>
                </div>

    </body>

    <%- include('../../includes/guest/footer.ejs') %>