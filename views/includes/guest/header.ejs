<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/js/tailwind.js"></script>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@100;300;400;700;900&display=swap" rel="stylesheet">

  <style type="text/tailwindcss">
    @layer utilities {
        body {
          font-family: 'Lato', sans-serif;
        }
        
        .form-control {
          @apply w-full
        }

        .form-control label {
          @apply block text-sm
        }

        .form-control input {
          @apply px-4 py-2 mt-1 border transition duration-200 rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary w-full
        }

        .btn {
          @apply px-4 py-2 rounded-full transition duration-200 border hover:bg-gray-200 focus:ring focus:ring-offset-2 focus:ring-gray-500
        }

        .btn-primary {
          @apply bg-primary hover:bg-primary/90 text-white !border-none focus:!ring-primary
        }
      }
    </style>
</head>